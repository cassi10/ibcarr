{
  "name": "ibcarr",
  "version": "0.0.0",
  "description": "ibcarr monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint --continue",
    "type-check": "turbo run type-check",
    "format": "prettier --check \"**/*.{ts,tsx,md}\""
  },
  "author": "cassi10 <67207048+cassi10@users.noreply.github.com> (https://www.ibcarr.com/)",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "eslint": "^8.6.0",
    "eslint-formatter-pretty": "^4.1.0",
    "prettier": "^2.5.1",
    "turbo": "^1.0.24"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**",
          "dist/**"
        ]
      },
      "lint": {
        "dependsOn": [
          "^lint",
          "type-check"
        ]
      },
      "type-check": {
        "dependsOn": [
          "^type-check"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
