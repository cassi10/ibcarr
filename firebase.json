{
  "hosting": [
    {
      "target": "games",
      "public": "apps/games/out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "todolist",
      "public": "apps/todolist/out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099,
      "host": "127.0.0.1"
    },
    "functions": {
      "port": 5001,
      "host": "127.0.0.1"
    }
  },
  "firestore": {
    "rules": "./firebase/firestore/firestore.rules",
    "indexes": "./firebase/firestore/firestore.indexes.json"
  },
  "functions": {
    "source": "./firebase/functions/",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
