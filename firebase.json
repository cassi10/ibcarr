{
  "hosting": [
    {
      "target": "games",
      "public": "apps/games/out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "todolist",
      "public": "apps/todolist/out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/robots.txt",
          "destination": "/robots.txt"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
